<% @d = Date.parse(Time.now.to_s)
  if task.due.nil?  
    @distance = "Many "                
  else
    @distance = task.due.mjd - @d.mjd
  end                
%> 
<div class = "card">
  <div class = "card-content">
    <b> <%= "#{@distance} days left" %> </b><br>
    <%= task.content %>
  </div>
   <div class = "card-action">
    <span style="float: left;">     
    </span>
    <span style="float: right; font-size: small; color: gray">
      <%= link_to 'Destroy', task, method: :delete, remote:true, data: { confirm: 'Are you sure? This action is irreversible.' } %>
      <%= link_to 'see more', edit_task_path(task) %>
      <%= link_to 'Done', change_task_path(task, state: 'done'), remote: true, method: :put %>       
    </span>
  </div>
  
</div>

