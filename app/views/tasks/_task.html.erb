<% @d = Date.parse(Time.now.to_s)
  if task.due.nil?  
    @distance = "Many "                
  else
    @distance = task.due.mjd - @d.mjd
  end                
%> 
<div class = "card">
  <div class = "card-panel lime accent-1">
    <span style="float: left;">
      <%= "#{@distance} days left" %> 
    </span>
    <span style="float: right;">
      <%= link_to 'see more', edit_task_path(task) %>
    </span>
  </div>
  <div class = "card-content">
    <%= task.content %>
  </div>
</div>

